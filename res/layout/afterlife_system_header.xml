<?xml version="1.0" encoding="utf-8"?>
<!-- Credits and Honor to AFTERLIFE PROJECT TEAM -->
<LinearLayout
  android:clipToPadding="false"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="10.0dip"
  android:layout_marginBottom="10.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
    android:layout_width="fill_parent"
    android:layout_height="135.0dip"
    android:layout_marginHorizontal="16.0dip"
    app:cardBackgroundColor="@android:color/system_accent1_500"
    app:cardCornerRadius="26.0dip"
    app:cardElevation="0.0dip">
         <com.google.android.material.card.MaterialCardView
         android:layout_width="fill_parent"
         android:layout_height="110.0dip"
         android:layout_marginTop="0.0dip"
         android:layout_marginBottom="35.0dip"
         android:layout_marginHorizontal="0.0dip"
         app:cardBackgroundColor="@android:color/system_accent1_100"
         app:cardCornerRadius="26.0dip"
         app:cardElevation="0.0dip">
         <LinearLayout
                android:layout_gravity="end|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent">
                <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="end|center"
                android:id="@+id/lottie_view"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5.0dip"
                android:layout_marginEnd="25.0dip"
                android:layout_marginBottom="5.0dip"
                android:adjustViewBounds="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/system_preview"
                app:lottie_repeatMode="reverse" />
                </LinearLayout>
         <LinearLayout
         android:gravity="center_vertical"
         android:layout_gravity="start|center"
         android:orientation="vertical"
         android:paddingStart="20.0dip"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:baselineAligned="false"
         android:paddingEnd="20.0dip">
         <TextView
           android:textStyle="bold"
           android:layout_gravity="start"
           android:textColor="@android:color/system_accent1_500"
           android:textSize="35sp"
           android:textAppearance="?android:textAppearanceListItem"
           android:ellipsize="marquee" android:id="@+id/title"
		   android:text="@string/header_category_system"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:singleLine="false" />
           <TextView
           android:textSize="10sp"
           android:textColor="@android:color/system_accent1_500"
           android:layout_gravity="start"
           android:text="@string/system_dashboard_summary"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxLines="10"
           android:layout_alignLeft="@+id/title"
           android:textAlignment="viewStart"
           android:layout_alignStart="@+id/title"
           style="@style/PreferenceSummaryTextStyle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
         <FrameLayout
         android:layout_gravity="bottom|center"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="5.0dip"
         android:layout_marginEnd="10.0dip">
            <LinearLayout
            android:layout_gravity="end|center"
            android:orientation="horizontal"
            android:layout_marginEnd="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.card.MaterialCardView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginHorizontal="0.0dip"
                    app:cardBackgroundColor="@android:color/system_accent1_300"
                    app:cardCornerRadius="99.0dip"
                    app:cardElevation="0.0dip" />
                    <com.google.android.material.card.MaterialCardView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginHorizontal="6.0dip"
                    app:cardBackgroundColor="@android:color/system_accent2_100"
                    app:cardCornerRadius="99.0dip"
                    app:cardElevation="0.0dip" />
                    <com.google.android.material.card.MaterialCardView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginHorizontal="0.0dip"
                    app:cardBackgroundColor="@android:color/system_accent3_100"
                    app:cardCornerRadius="99.0dip"
                    app:cardElevation="0.0dip" />
              </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>